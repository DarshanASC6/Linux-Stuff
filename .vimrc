syntax on
set noerrorbells
set smartindent
set number
set nowrap
set noswapfile
set nobackup
set undodir=>~/.vim/undodir
set undofile
set incsearch

"------------------------------------------------------------------

call plug#begin('~/.vim/plugged')

" Cool task bar
Plug 'vim-airline/vim-airline'

call plug#end()

"------------------------------------------------------------------

set background=dark
